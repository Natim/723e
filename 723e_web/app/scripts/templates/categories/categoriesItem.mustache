{{#categorie}}

{{^parent}}
<div class="col-md-4 categorie-{{i}}">
	<div class="panel panel-default">
  		<div class="panel-body">
		{{/parent}}
			<ul>
				<li data-id="{{ id }}">
					<div class="categorie">
					<i class="circle fa {{ icon }}" style="color: {{ color }}; font-size: 20px;"></i>
					{{ name }}
					<div class="actions">
						<i class="edit fa fa-pencil-square-o"></i>
						<i class="delete fa fa-trash-o"></i>
					</div>
					{{{ tree }}}
				</li>
			</ul>
		{{^parent}}
		</div>
	</div>
</div>
{{/parent}}

{{/categorie}}
