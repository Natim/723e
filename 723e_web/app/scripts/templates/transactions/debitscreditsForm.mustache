<form id="debitcredit_form">
	<div class="row">
		<div class="col-md-12">
		{{#debitcredit}}
			<h2>Modifier un debit/credit</h2>
		{{/debitcredit}}
		{{^debitcredit}}
		 	<h2>Ajouter un debit/credit</h2>
		{{/debitcredit}}
		</div>
	</div>
	<div class="row">
		<div class="col-md-offset-2 col-md-4">
			<div class="form-group">
				<label class="col-sm-12 control-label">Currency</label>

				<div class="col-sm-12">
					<select class="form-control" name="currency">
						{{#currencies}}
						<option value="http://localhost:8000/api/v1/currencies/{{ id }}">{{ name }}</option>
						{{/currencies}}
					</select>
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-2 control-label">Name</label>
				<div class="col-sm-12">
					<input type="text" value="" class="form-control" name="name" />
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-12 control-label">Amount</label>
				<div class="col-sm-12">
					<input type="text" value="" class="form-control" name="amount" />
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-12 control-label">Date</label>
				<div class="col-sm-12">
					<input type="text" value="2014-09-24" class="form-control" name="date" />
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-12 control-label">Enable</label>
				<div class="col-sm-12">
					<input type="text" value="true" class="form-control" name="active" />
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-12 control-label">Category</label>
				<div class="col-sm-12">
					<select class="form-control" name="">
						{{#categories}}
						<option value="http://localhost:8000/api/v1/categories/{{ id }}">{{ name }}</option>
						{{/categories}}
					</select>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4 col-md-offset-8">
			<input type="hidden" name="account" value="http://localhost:8000/api/v1/accounts/1" />
			{{#debitcredit}}
			<input type="hidden" name="id" value="{{ id }}" />
			<input type="hidden" name="user" value="{{ user }}" />

			<button type="button" class="btn btn-primary debitscredits_form_submit">Modifier</button>
			{{/debitcredit}}
			{{^debitcredit}}
			<button type="button" class="btn btn-primary debitscredits_form_submit">CrÃ©er</button>
			{{/debitcredit}}
			<button type="button" class="btn btn-primary debitscredits_form_cancel">Annuler</button>
		</div>
	</div>
</form>
