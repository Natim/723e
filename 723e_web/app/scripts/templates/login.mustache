<div id="login_page" class="not_loaded">
	<div class="hide_if_about">
		<div id="login">
			<div class="container">
				<div class="row">
				  	<div class="col-md-offset-4 col-md-4 col-sm-offset-3 col-sm-6">
						<div class="box_background">
							<h1>723e <small>- ALPHA</small></h1>

							<div class="error alert alert-danger" role="alert">
								<p>Provided information are incorrect</p>
							</div>
							<form id="login_form">
								<p>
									<div class="form-group">
								    	<label class="sr-only" for="exampleInputAmount">Amount (in dollars)</label>
									    <div class="input-group">
									      	<div class="input-group-addon"><i class="fa fa-user"></i></div>
											<input type="text" name="username" placeholder="Username"/>
									    </div>
								    </div>
									<div class="form-group">
									    <div class="input-group">
									      	<div class="input-group-addon"><i class="fa fa-lock"></i></div>
											<input type="password" name="password" placeholder="Password"/>
									    </div>
								    </div>
									<input type="submit" class="btn btn-primary" value="Login"/>
									<div class="clearfix"></div>
								</p>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
		{{#allowSubscription}}
		<div id="subscription_form">
			<div class="container">
				<div class="row">
					<div class="col-sm-offset-3 col-sm-6 ">
						<div class="box_background">
							<h2>Create an account</h2>
							<hr/>
							<form id="subscribe_form">
								<p>
									<div class="form-group">
									    <p class="error-msg"></p>
									    <div class="input-group">
									      	<div class="input-group-addon"><i class="fa fa-user"></i></div>
											<input type="text" name="username" placeholder="Username"/>
									    </div>
								    </div>
									<div class="form-group">
									    <p class="error-msg"></p>
									    <div class="input-group">
									      	<div class="input-group-addon"><i class="fa fa-envelope"></i></div>
											<input type="text" name="email" placeholder="Email address"/>
									    </div>
								    </div>
									<div class="form-group">
									    <p class="error-msg"></p>
									    <div class="input-group">
									      	<div class="input-group-addon"><i class="fa fa-lock"></i></div>
											<input type="password" name="password" placeholder="Password"/>
									    </div>
								    </div>
									<div class="form-group">
									    <p class="error-msg"></p>
									    <div class="input-group">
									      	<div class="input-group-addon"><i class="fa fa-lock"></i></div>
											<input type="password" name="passwordRepeat" placeholder="Repeat password"/>
									    </div>
								    </div>
								    <hr/>
									<div class="form-group">
									    <p class="error-msg"></p>
									    <div class="input-group">
									      	<div class="input-group-addon"><i class="fa fa-area-chart"></i></div>
											<input type="text" name="name" placeholder="Label of your account"/>
									    </div>
								    </div>
									<div class="form-group">
									    <p class="error-msg"></p>
									    <div class="input-group">
									      	<div class="input-group-addon"><i class="fa fa-money"></i></div>
											<select name="currency" class="form-control" placeholder="Currency">
										    </select>
									    </div>
								    </div>
								    <hr/>
								    <div class="row">
										<div class="col-xs-12 col-sm-6">
											<input type="submit" class="btn btn-primary btn-block" value="Save and login"/>
										</div>
										<div class="col-xs-12 col-sm-6">
											<input type="button" class="btn btn-default btn-block back" value="Cancel"/>
										</div>
									</div>

									<div class="clearfix"></div>
								</p>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>

		{{/allowSubscription}}
	</div>
	<div id="about">
		<div class="container">
			<div class="row">
				<div class="col-sm-offset-2 col-sm-8">
					<h2>About us</h2>
					<hr/>
					<p>Thanks for showing interest in this project. A lot more coming soon, sorry if it takes times but this project is develop only on my spare time and I work really hard at not going crazy by coding too much :D</p>
					<hr/>
					<p  class="text-right"><a href="https://github.com/sebastienbarbier/723e" target="_blank" class="btn btn-default">Github</a> <a class="btn btn-default back">Back</a></p>
				</div>
			</div>
		</div>
	</div>
	<footer>
		<div class="container-fluid">
			<div class="col-md-6">
				<p style="padding-top: 10px;"><strong><i class="fa fa-server"></i> Server</strong> > {{ server }}</p>
			</div>
			<div class="col-md-6">
				<p style="text-align: right;">

					{{#allowSubscription}}
					<a class="btn btn-default subscribe">Create an account</a>
					{{/allowSubscription}}
					<a class="btn btn-default about">About 723e</a>
				</p>
		  	</div>
		</div>
	</footer>
</div>
